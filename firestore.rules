rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FIRESTORE SECURITY RULES - SIMON STYLES LIMITED BLOG
     * 
     * Updated to allow seamless anonymous interactions for likes and comments.
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // --- COLLECTION RULES ---

    /**
     * @path /blogPosts/{blogPostId}
     * Publicly readable. Updates allowed for counters.
     */
    match /blogPosts/{blogPostId} {
      allow read: if true;
      // Allow creation/updates for counters (likes/comments)
      allow write: if true; 

      /**
       * @path /blogPosts/{blogPostId}/comments/{commentId}
       * Publicly readable and createable for anonymous insights.
       */
      match /comments/{commentId} {
        allow read: if true;
        allow create: if true;
        allow update: if isAdmin() || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likeCount']);
        allow delete: if isAdmin();

        /**
         * @path /blogPosts/{blogPostId}/comments/{commentId}/likes/{likeId}
         */
        match /likes/{likeId} {
          allow read: if true;
          allow create: if true;
          allow delete: if isAdmin();
        }
      }

      /**
       * @path /blogPosts/{blogPostId}/likes/{likeId}
       */
      match /likes/{likeId} {
        allow read: if true;
        allow create: if true;
        allow delete: if isAdmin();
      }
    }

    // Admin collection for verification
    match /admins/{userId} {
      allow get: if true;
    }

    // --- FALLBACK ---
    match /{path=**} {
      allow read, write: if isAdmin();
    }
  }
}