rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FIRESTORE SECURITY RULES - SIMON STYLES LIMITED
     * 
     * This configuration allows anonymous visitors to:
     * 1. Read blog posts and their statistics.
     * 2. Read and list comments/replies.
     * 3. Add new comments and likes.
     * 4. Update counters (likeCount, commentCount).
     *
     * Admin actions (create/delete posts) are restricted.
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // --- COLLECTION RULES ---

    /**
     * @path /blogPosts/{blogPostId}
     * Publicly readable. Updates allowed for counters (likes/comments) anonymously.
     */
    match /blogPosts/{blogPostId} {
      allow read: if true;
      allow update: if true; 
      allow create, delete: if isAdmin();

      /**
       * @path /blogPosts/{blogPostId}/comments/{commentId}
       * Publicly readable and listable for community engagement.
       */
      match /comments/{commentId} {
        allow read: if true;
        allow list: if true;
        allow create: if true;
        // Allow anonymous updates for likeCount on comments
        allow update: if true;
        allow delete: if isAdmin();

        /**
         * @path /blogPosts/{blogPostId}/comments/{commentId}/likes/{likeId}
         */
        match /likes/{likeId} {
          allow read, list: if true;
          allow create: if true;
          allow delete: if isAdmin();
        }
      }

      /**
       * @path /blogPosts/{blogPostId}/likes/{likeId}
       */
      match /likes/{likeId} {
        allow read, list: if true;
        allow create: if true;
        allow delete: if isAdmin();
      }
    }

    // Admin collection for verification
    match /admins/{userId} {
      allow get: if true;
    }

    // --- FALLBACK ---
    match /{path=**} {
      allow read, write: if isAdmin();
    }
  }
}