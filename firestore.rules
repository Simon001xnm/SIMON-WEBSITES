rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FIRESTORE SECURITY RULES - SIMON STYLES LIMITED BLOG
     * 
     * Allows anonymous users to interact with the blog (likes/comments)
     * while protecting administrative actions.
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // --- COLLECTION RULES ---

    /**
     * @path /blogPosts/{blogPostId}
     * Publicly readable. Updates allowed for counters (likes/comments).
     */
    match /blogPosts/{blogPostId} {
      allow read: if true;
      // Allow updates for counters (likeCount and commentCount) from anyone
      // In a production environment, you would validate the exact increment.
      allow update: if true; 
      allow create, delete: if isAdmin();

      /**
       * @path /blogPosts/{blogPostId}/comments/{commentId}
       * Publicly readable and createable for anonymous community insights.
       */
      match /comments/{commentId} {
        allow read: if true;
        allow create: if true;
        // Allow anyone to update the likeCount on a comment
        allow update: if isAdmin() || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likeCount']);
        allow delete: if isAdmin();

        /**
         * @path /blogPosts/{blogPostId}/comments/{commentId}/likes/{likeId}
         */
        match /likes/{likeId} {
          allow read: if true;
          allow create: if true;
          allow delete: if isAdmin();
        }
      }

      /**
       * @path /blogPosts/{blogPostId}/likes/{likeId}
       */
      match /likes/{likeId} {
        allow read: if true;
        allow create: if true;
        allow delete: if isAdmin();
      }
    }

    // Admin collection for verification
    match /admins/{userId} {
      allow get: if true;
    }

    // --- FALLBACK ---
    match /{path=**} {
      allow read, write: if isAdmin();
    }
  }
}