rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * FIRESTORE SECURITY RULES - SIMON STYLES LIMITED
     * 
     * ENFORCING LEAST PRIVILEGE:
     * 1. Public can read blog posts and stock.
     * 2. Only authenticated Admins can modify content.
     * 3. Community features (likes/comments) are disabled at the rule level.
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // --- COLLECTION RULES ---

    /**
     * @path /blogPosts/{blogPostId}
     * Publicly readable. Updates restricted to Admins.
     */
    match /blogPosts/{blogPostId} {
      allow read: if true;
      allow write: if isAdmin();

      // Interactions disabled
      match /comments/{commentId} {
        allow read: if true;
        allow write: if isAdmin();
      }
      
      match /likes/{likeId} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    /**
     * @path /Laptops Available/{stockId}
     * Live stock status collection.
     */
    match /Laptops Available/{stockId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /**
     * @path /admins/{userId}
     * Admin verification collection. Secured against public get.
     */
    match /admins/{userId} {
      allow get: if isAdmin();
    }

    // --- FALLBACK ---
    match /{path=**} {
      allow read, write: if isAdmin();
    }
  }
}